
<div class="card-group h-100">
	{{#with data}}
					<div class="card h-100">
						<div class="card-header">{{name}}</div>
						<div class="card-body">
							<div class="card_block">
								<span class="card_price_amount">{{price}}</span>
								<span class="card_price_duration">/ mo</span>
							</div>
							<div class="card_block">
								{{#each features}}
								<span class="card_description_item">{{this}}</span>
								{{/each}}														
							</div>
							<div class="card_block">
								<button class="{{#if @first}}btn btn-outline-primary{{else}}btn btn-primary{{/if}} card_button">{{button}}</button>
							</div>
						</div>
					</div>
{{/with}}
</div>
