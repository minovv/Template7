<header class="header">
			<div>
			{{> logo}}
			</div>
			<nav class="header_nav">
				<div class="header_nav_right">
					{{> nav list=header}}
				</div>			
			</nav>
</header>

<section class="ads_section">
	<div class="ads">	
		{{#with header.ad}}
		<div>
			<span class="ads_logo">Ad</span>
			<a href="{{url}}" class="ads_link">{{text}}</a>	
	    {{/with}}
		</div>
		<div>
		<span class="users_online">Users online: {{header.userOnline}}</span>
		</div>
	</div>	
</section>

<section class="hero_block">
	<div class="hero">
		{{#with hero}}
		<h1 class="hero_title">{{title}}</h1>
		<p class="hero_text">{{description}}</p>
		<a type="button" class="button hero_button" href="{{button.url}}">{{button.text}}</a>
		{{/with}}
	</div>
</section>

<section class="about_block">
	<div class="about">
		{{#with about}}
		<h3 class="about_title">{{heading}}</h3>
		<p class="about_text">{{info}}</p>
		{{/with}}
	</div>	
</section>
		
<main class="main">
	<div class="articles_header">
			<div><h2 class="articles_title">Our Articles</h2></div>
			<div><a type="button" class="button_outline" href="#">View All</a></div>
		</div>
	<div class="articles">
		
		
	</div>	
</main>

<div class="articles_cards">
			{{#each articles}}
			<article class="card">
				<img src="{{photo}}" alt="{{name}}" class="card_image" id="{{id}}">
				{{#if isNew}}
				<span class="card_badge">new</span>
				{{/if}}
				<h3 class="card_name">{{name}}</h3>
				<p class="card_description">{{description}}</p>
				<a type="button" class="button card_button" href="#">Read All</a>
				</article>
			{{/each}}
		</div>

<footer>
		<div class="footer">
			{{#each footer.pages}}
			<a href="{{path}}" class="nav_link">{{name}}</a>
			{{/each}}	
			<span class="footer_copyright">{{footer.copyright}}</span>		
		</div>
</footer>
	